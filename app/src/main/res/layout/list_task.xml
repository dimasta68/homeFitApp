<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="title_task"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="desc_task"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_task" />

    <TextView
        android:id="@+id/inactive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="5sp"
        android:text="inactive"
        app:layout_constraintEnd_toStartOf="@+id/imgstat"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/lableLv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="lavel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_task" />
    <TextView
        android:id="@+id/lavel"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="lavel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_task" />

    <TextView
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:text="cat"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgstat"
        android:layout_width="31dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_unlock" />

    <ProgressBar
        android:id="@+id/progresBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="87dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:max="21"
        android:progress="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pogtext2"
        android:layout_width="69dp"
        android:layout_height="13dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:text="Выполненно:"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/progresBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pogtext"
        android:layout_width="15dp"
        android:layout_height="13dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="72dp"
        android:text="0"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/progresBar"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/period"
        android:layout_width="15dp"
        android:layout_height="13dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="72dp"
        android:text="0"
        android:textSize="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/progresBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/times"
        android:layout_width="15dp"
        android:layout_height="13dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="72dp"
        android:text="0"
        android:textSize="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/progresBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="15dp"
        android:layout_height="13dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="72dp"
        android:text="0"

        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/progresBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calc"
        android:layout_width="15dp"
        android:layout_height="13dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="72dp"
        android:text="0"
        android:textSize="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/progresBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/period3"
        android:layout_width="15dp"
        android:layout_height="13dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="72dp"
        android:text="/"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/progresBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lead_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>